{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "프로그램 시작",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/Server/app.js",
            "runtimeExecutable": "nodemon",
            "restart": true
        },
        {
            "type": "node-terminal",
            "name": "스크립트 실행: start",
            "request": "launch",
            "command": "npm run start",
            "cwd": "${workspaceFolder}/Server"
        }
    ]
}
